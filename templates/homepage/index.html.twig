{% extends 'base.html.twig' %}

{% block title %}OLMI{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-12">

                <h1 class="mb-3">Hello {{ app.user?app.user.firstname:'' }}!</h1>

                {% if is_granted('ROLE_EDITOR') %}
                    <div class="float-left">
                        <a href="{{ path('admin_dashboard') }}" class="btn btn-primary">Backoffice</a>
                    </div>
                {% endif %}

                <div class="float-right">
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('app_logout') }}" class="btn btn-danger">Logout</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-success">Login</a>
                    {% endif %}
                </div>
            </div>
        </div>
    <div>    
{% endblock %}
