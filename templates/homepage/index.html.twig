{% extends 'base.html.twig' %}

{% block title %}OLMI{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-12">

                <h1 class="mb-3">Hello {{ app.user?app.user.firstname:'' }}!</h1>

                {% if is_granted('ROLE_EDITOR') %}
                    <div class="float-left">
                        <a href="{{ path('admin_dashboard') }}" class="btn btn-primary">Backoffice</a>
                    </div>
                {% endif %}

                <div class="float-right">
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('app_logout') }}" class="btn btn-danger">Logout</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-success">Login</a>
                    {% endif %}
                </div>
            </div>
        </div>
        <br>
        Pages : <br>
        {% if pages is not empty %}
            {% for page in pages %}
                {% if page.isCms() %}
                    <a href="{{ path('page_show', {'slug': page.slug}) }}">{{ page.title }}</a> <br>
                {% endif %}
            {% endfor %}
        {% endif %}
        <br>
        Toutes les familles : <br>
        <a href="{{ path('family_index') }}">Tous les travaux</a> <br>
        <br>
        Familles : <br>
        {% if families is not empty %}
            {% for family in families %}
                <a href="{{ path('family_show', {'slug': family.slug}) }}">{{ family.title }}</a> <br>
            {% endfor %}
        {% endif %}
        <br>
        Fiches travaux : <br>
        {% if worksheets is not empty %}
            {% for worksheet in worksheets %}
                <a href="{{ path('worksheet_show', {'slug': worksheet.slug, 'family_slug': worksheet.family.slug}) }}">{{ worksheet.title }}</a> <br>
            {% endfor %}
        {% endif %}
        <br>
        Aides : <br>
        {% if aids is not empty %}
            {% for aid in aids %}
                <a href="{{ path('aid_show', {'slug': aid.slug}) }}">{{ aid.title|title }}</a> <br>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}
