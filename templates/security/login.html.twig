{% extends 'base.html.twig' %}

{% block title %}{{ 'Sign In'|trans() }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-12">
                <form class="form" action="" method="post">

                    <h3 class="text-center text-info">{{ 'Sign In'|trans() }}</h3>

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            {{ 'You are logged in as'|trans() }} {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <div class="form-group">
                        <label for="inputEmail" class="text-info">Email:</label><br>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="text-info">{{ 'Password'|trans() }}:</label><br>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="remember-me" class="text-info"><span>{{ 'Remember Me'|trans() }}</span>Â <span><input id="remember-me" name="_remember_me" type="checkbox"></span></label><br>
                        <input type="submit" name="submit" class="btn btn-info btn-md" value="{{ 'Sign In'|trans() }}">
                    </div>

                    <div class="text-right">
                        <div><a href="{{ path('app_register') }}" class="text-info">{{ 'Register'|trans() }}</a></div>
                        <div><a href="{{ path('app_forgot_password_request') }}" class="text-info">{{ 'Forgot Your Password ?'|trans() }}</a></div>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                </form>
            </div>
        </div>
    </div>

{% endblock %}
