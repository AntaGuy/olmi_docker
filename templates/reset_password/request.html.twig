{% extends 'base.html.twig' %}

{% block title %}{{ 'Reset your password'|trans() }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-12">
                {{ form_start(requestForm) }}
                    <h3 class="text-center text-info">{{ 'Reset your password'|trans() }}</h3>

                    {% for flashError in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flashError|trans() }}</div>
                    {% endfor %}

                    {% if app.user %}
                        <div class="mb-3">
                            {{ 'You are logged in as'|trans() }} {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <div class="form-group"> 
                        {{ form_row(requestForm.email, {'label_attr':{'class':'text-info'}, 'attr':{'class':'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        <small>
                            {{ 'Enter your email address and we we will send you a link to reset your password.'|trans() }}
                        </small>
                    </div>

                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-info btn-md" value="{{ 'Send password reset email'|trans() }}">
                    </div>

                    <div class="text-right">
                        <div><a href="{{ path('app_register') }}" class="text-info">{{ 'Register'|trans() }}</a></div>
                        <div><a href="{{ path('app_login') }}" class="text-info">{{ 'Sign In'|trans() }}</a></div>
                    </div>

                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>

{% endblock %}